<a href="http://{{model.url}}">
    <h4>{{model.name}}</h4>
</a>
<h5>{{model.city}}, {{model.state}}</h5>
<span>
    {{model.address1}}
</span>

{{#md-collection content=model.leads header='Leads' as |lead|}}
<div class="collection-item">
    {{link-to lead.jobTitle 'dashboard.lead.show' lead class='teal-text'}}
    <div class="secondary-content teal-text text-darken-2">
        {{lead.status}}
    </div>
</div>
{{/md-collection}}
{{#md-collection content=model.contacts header='Contacts' as |contact|}}
  {{!-- {{link-to lead.jobTitle 'dashboard.companies.show' lead class='collection-item'}} --}}
  <h6 class="collection-item">{{contact.fullName}}</h6>
{{/md-collection}}

